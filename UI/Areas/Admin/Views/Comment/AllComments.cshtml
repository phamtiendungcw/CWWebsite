
@{
    ViewBag.Title = "MetaList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@model List<DTO.CommentDTO>

<section class="content-header">
    <h1>All Comment List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Comment</a></li>
        <li class="breadcrumb-item active"><a>All Comment List</a></li>
    </ol>
</section>
<br />
<div class="card-footer">
    <button type="submit" class="btn btn-primary" onclick="window.location.href='/Admin/Comment/UnapprovedComments'">Unapproved Comments List</button>
</div>

<div class="card">
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Post Title</th>
                    <th>Comment Content</th>
                    <th>Email</th>
                    <th>Add Date</th>
                    <th>Approve</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="a_@item.ID">
                        <td>@item.PostTitle</td>
                        <td>@item.CommentContent</td>
                        <td>@item.Email</td>
                        <td>@item.AddDate.ToString("dd.MM.yyyy")</td>
                        @if (!item.isApproved)
                        {
                            <td align="center" valign="middle">
                                <a href="/Admin/Comment/ApproveComment1/@item.ID">
                                    <br />
                                    <img src="~/Areas/Admin/Content/icons/Approve.ico"/>
                                </a>
                            </td>
                        }
                        else
                        {
                            <td>Approved</td>
                        }
                        <td align="center" valign="middle">
                            <a href="/Admin/Comment/ApproveComment/@item.ID">
                                <br />
                                <img src="~/Areas/Admin/Content/icons/Approve.ico"/>
                            </a>
                        </td>
                        <td align="center" valign="middle">
                            <a href="#">
                                <br />
                                <img src="~/Areas/Admin/Content/icons/Delete.ico" onclick="AskQuestion('/Admin/Comment/DeleteComment/', @item.ID)"/>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Post Title</th>
                    <th>Comment Content</th>
                    <th>Email</th>
                    <th>Add Date</th>
                    <th>Approve</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Partial("~/Areas/Admin/Views/Shared/ModelMessage.cshtml")
    <!-- /.card-body -->
</div>
<!-- /.card -->
<script src="~/Areas/Admin/Content/JS/DeleteRecord.js"></script>